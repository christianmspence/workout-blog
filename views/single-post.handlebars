<div class="container">
    {{> single-post-view post}}

    {{#if loggedIn}}
    <form class="comment-form">
        <div>
            <textarea name="comment-body" placeholder="Type comment here!"></textarea>
        </div>
        
        <div>
            <button type="submit" class="btn card-title bg-danger bg-opacity-50 text-white bg-opacity-50">add comment</button>
            <button type="button" class="upvote-btn btn card-title bg-danger bg-opacity-50 text-white bg-opacity-50">upvote</button>
        </div>
    </form>

    {{/if}}

    {{> comments post.comments}}
</div>


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}